# Multi-stage Dockerfile for SCaudit Platform

# Stage 1: Build Go application
FROM golang:1.23-alpine AS builder

# Install build dependencies
RUN apk add --no-cache git make

WORKDIR /build

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build the application
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags="-w -s -X scaudit/internal/webapp.Version=${VERSION:-dev} -X scaudit/internal/webapp.BuildTime=${BUILD_TIME:-unknown}" \
    -o scaudit-api \
    ./cmd/scaudit-api

# Stage 2: Create minimal runtime image
FROM alpine:3.19

# Install runtime dependencies
RUN apk --no-cache add ca-certificates tzdata curl

# Create non-root user
RUN addgroup -g 1000 scaudit && \
    adduser -D -u 1000 -G scaudit scaudit

WORKDIR /app

# Copy binary from builder
COPY --from=builder /build/scaudit-api .

# Copy configuration files (if any)
COPY --from=builder /build/config ./config

# Create data directories
RUN mkdir -p /app/data /app/reports /app/.cache /app/logs && \
    chown -R scaudit:scaudit /app

# Switch to non-root user
USER scaudit

# Expose ports
EXPOSE 8088

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8088/health || exit 1

# Run the application
CMD ["./scaudit-api"]
