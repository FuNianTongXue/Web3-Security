# ========================================
# SCaudit Platform - Environment Configuration
# ========================================

# Application Configuration
APP_NAME=SCaudit
APP_VERSION=2.0.0
APP_ENV=production
APP_PORT=8088
APP_DEBUG=false

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=scaudit
DB_USER=scaudit
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME_MIN=5

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION
REDIS_DB=0

# JWT Configuration
# Generate: openssl rand -base64 32
JWT_SECRET=GENERATE_A_SECURE_256BIT_SECRET_HERE
JWT_EXPIRATION_HOURS=24

# Encryption Configuration
# Generate: openssl rand -base64 32
ENCRYPTION_KEY=GENERATE_A_SECURE_256BIT_KEY_HERE

# GitLab Integration
GITLAB_URL=https://gitlab.example.com
# Note: GitLab tokens are stored encrypted in database via UI

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://scaudit.example.com

# Grafana Configuration (for docker-compose)
GRAFANA_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ========================================
# Security Notes
# ========================================
# 1. Never commit this file with real credentials
# 2. Use strong, randomly generated passwords
# 3. Rotate secrets regularly
# 4. Use a secret management service in production (e.g., AWS Secrets Manager, Vault)
# 5. Ensure JWT_SECRET and ENCRYPTION_KEY are different
# 6. Keep backups of your secrets in a secure location
